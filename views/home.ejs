<%- include("partials/header"); -%>  
<div class="input-group search medium-bottom-margin">
    <input class="form-control border-0 rounded-left" type="text" placeholder="Search for a word">
    <span class="input-group-append">
        <button class="btn border-left-0 bg-white" type="button">
            <i class="bi bi-search"></i>
        </button>
    </span>
</div>

<div class="current-word-container view-only normal-bottom-margin d-none">
    <div class="card flashcard flashcard-current flashcard-front d-none">
        <div class="card-body">
            <p class="flashcard-word"></p>
        </div>
    </div>
    <div class="card flashcard flashcard-current flashcard-back d-none"> 
        <div class="card-body container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <img src="/images/flashcard_placeholder.png" alt="Image depicts the example sentence">
                </div>
                <div class="col-md-9">
                    <p class="card-text text-start">Meaning: </p>
                    <p class="card-text text-start">Example: </p>
                </div>
            </div>
            <div class="row justify-content-end">
                <button class="btn btn-outline-secondary bg-none border-0 col-1" type="button">
                    <i class="bi bi-pencil-square"></i>
                </button>
                <button class="btn btn-outline-secondary bg-none border-0 col-1" type="button">
                    <i class="bi bi-trash3"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="container current-word-container edit normal-bottom-margin">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="container card flashcard">
                <div class="card-body">
                    <div class="row">
                        <label class="col-4 text-end" for="wordInEdit">Word: </label>
                        <input class="col-8" type="text" name="wordInEdit" id="wordInEdit">
                    </div>
                    <div class="row">
                        <label class="col-4 text-end" for="categoryInEdit">Category: </label>
                        <input class="col-8" type="text" name="categoryInEdit" id="categoryInEdit">
                    </div>
                    <div class="row">
                        <label class="col-4 text-end" for="wordTypeInEdit">Word Type: </label>
                        <input class="col-8" type="text" name="wordTypeInEdit" id="wordTypeInEdit">
                    </div>
                    <div class="row">
                        <p class="col-4 text-end">Extra Info: </p>
                    </div>
                    <div class="row">
                        <input class="col-11" type="text" class="extra-info" placeholder="Extra info for the word...">
                        <button class="col-1 btn btn-outline-secondary bg-white rounded-circle" onclick="removeExtraInfo()" type="button">
                            -
                        </button>
                    </div>
                    <div class="row justify-content-center">
                        <button class="col-1 btn btn-outline-secondary bg-white rounded-circle" onclick="addExtraInfo()" type="button">
                            +
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="container card flashcard">
                <div class="card-body">
                    <div class="row">
                        <label class="col-4 text-end" for="meaningInEdit">Meaning: </label>
                        <input class="col-8" type="text" name="meaningInEdit" id="meaningInEdit">
                    </div>
                    <div class="row">
                        <label class="col-4 text-end" for="exampleInEdit">Example: </label>
                        <input class="col-8" type="text" name="exampleInEdit" id="exampleInEdit">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="carouselExampleControls" class="carousel slide medium-bottom-margin" data-bs-ride="carousel" data-bs-interval="4000">
    <div class="carousel-inner" role="listbox">
        <div class="container">
            <% homeEJSTopPickFlashCards.forEach(function(flashCard, idx, arr) { %>
                <% if (idx % 3 === 0) { %>
                    <% if (0 === idx) { %>
                        <div class="carousel-item active">
                    <% } else { %>
                        <div class="carousel-item">
                    <% } %>
                            <div class="row">
                <% } %>
                                <div class="col-md-4">
                                    <div class="card flashcard">
                                        <div class="card-body">
                                            <p class="flashcard-word"><%= flashCard %></p>
                                        </div>
                                    </div>
                                </div>
                <% if ((idx + 1) === arr.length || (idx + 1) % 3 === 0) { %>
                            </div>
                        </div>
                <% } %>
            <% }) %>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<%- include("partials/footer"); -%>  